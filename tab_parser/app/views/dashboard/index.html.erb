<h2>Gross Revenue</h2>

<table id='purchasers'>
  <thead>
    <tr>
      <td>Name</td>
      <td>Deal description</td>
      <td>Total Spent</td>
    </tr>
  </thead>
  <tbody>
    <% @deals.each do |deal| %>
      <tr>
        <td><%= deal.purchaser %></td>
        <td><%= deal.description %></td>
        <td><%= deal.cost %></td>
      </tr>
    <% end %>
  </tbody>
</table>
